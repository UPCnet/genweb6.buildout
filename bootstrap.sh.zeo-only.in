#/bin/sh
# `which python3.11` -m venv .

Help()
{
	echo "Add as argument the python path from your venv."
	echo "For example: /Dades/pythons/py3_11_1gw6   -------> ./bootstrap.sh /Dades/pythons/py3_11_1gw6"
	echo "Or modify your venv variable and not add argument"
	echo "venv=/Dades/pythons/py3_11_1gw6   -------> ./bootstrap.sh" 
}

while getopts ":h" option; do
	case $option in
		h) #display Help
			Help
			exit;;
		\?) #incorrect option
			echo "Error: Invalid option"
			exit;;
	esac
done

if [ $1 ]; then
	venv=$1
else
	venv="/Dades/pythons/py3_11_1gw6"
fi

echo "Your python path is: $venv"
$venv/bin/pip install -r requirements.txt
$venv/bin/buildout -N -c zeo-only.cfg
echo "run plone with: ./bin/zeo1 fg"


